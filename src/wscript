
def build(bld):
    bld.shlib(target = 'ndarray', 
                source = 'ndarray.cpp')
    
    bld.program(target = 'test1', 
                source = 'test1.cpp', 
                use = 'tclap ndarray')
    
    bld.program(target = 'store_test1', 
                source = 'store_test1.cpp', 
                use = 'tclap ndarray')
    
    bld.program(target = 'store_test2', 
                source = 'store_test2.cpp', 
                use = 'tclap ndarray')
    
    bld.program(target = 'store_test3', 
                source = 'store_test3.cpp', 
                use = 'tclap ndarray')
